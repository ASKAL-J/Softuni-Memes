@using System.Security.Policy
@using Microsoft.AspNet.Identity
@using Softuni___Memes.Models
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        <li id="greeting">
           @Html.ActionLink("Hello, " + @Html.Raw(Html.Action("GetCurrentUserName", "Account")) + "!", "Index", "Manage", routeValues: new { area = "" }, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
        <a id="menuLogout" href="javascript:document.getElementById('logoutForm').submit()">
            <button style="margin: 10px" type='button' class='btn btn-primary' id="button">Log out</button>
        </a>
        </li>
    </ul>
    }
}
else
{
    <li id="buttons">
        <button style="margin: 10px" type='button' class='btn btn-primary' id="button" onclick="location.href='@Url.Action("Login", "Account")'">Login</button>
        <button style="margin: 10px" type='button' class='btn btn-primary' id="button" onclick="location.href='@Url.Action("Register", "Account")'">Sign up</button>
    </li>
    
