<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/favicon.ico" type="image/x-icon" />
    <title>@ViewBag.Title - Softuni Memes</title>

</head>
<body>
    @* header *@

        <nav role="navigation" class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header navbar-left pull-left">
                    <a class="navbar-brand" href="#" onclick="location.href = '@Url.Action( "Index", "Home")'"><img src="~/Images/logo.png" /></a>
                </div>
                <div class="navbar-header navbar-right pull-right">
                    @Html.Partial("_LoginPartial")
                    <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="visible-xs-block clearfix"></div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li><a href="#" onclick="location.href = '@Url.Action("index", "Image")'">View All Memes</a></li>
                        <li><a href="#" onclick="location.href = '@Url.Action("TopFive", "Image")'">Top 5 Memes</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    @*   body content  *@
    <div class="container-fluid body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
    </div>


    @*footer content*@
    <footer class="container-fluid text-center">
        <div class="col-md-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2933.7494573265208!2d23.348494815008543!3d42.66666442367692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa85cb55c36753%3A0xbde203f1e5db85d1!2z0YPQuy4g4oCe0KLQuNC90YLRj9Cy0LDigJwgMTUtMTcsIDExMTMg0KHQvtGE0LjRjw!5e0!3m2!1sbg!2sbg!4v1472300758046" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="col-md-4">
            <h3>Adress:</h3>
            <img src="~/Images/mapicon.png" /> Tintyava Street 15-17<br />
            <h3>Contact us:</h3>
            <a href="http://softuni.bg"><img src="~/Images/softunicap.png"/> Software University </a>
            <br/>
            <a href="/Home/About"><img src="~/Images/team.png" /> ASKAL-J </a>
        </div>
        <div class="col-md-4">
            <h3>Menu:</h3>
            <a href="/Image/Create">Create meme</a><br />
            <a href="/Image/Index">View All Memes</a><br />
            <a href="/Image/TopFive">Top 5 Memes</a>
        </div>
    </footer>
</body>
</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@RenderSection("Scripts", required: false)
@RenderSection("Styles", required: false)