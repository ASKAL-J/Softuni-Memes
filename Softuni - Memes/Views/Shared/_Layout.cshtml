<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <title>@ViewBag.Title - Softuni Memes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="margin:0;">
<div id="loader"></div>
<div id="myDiv" class="animate-bottom">
    <div class="navbar navbar-inverse navbar-fixed-top" id="top-bar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home",
                    new {area = ""}, new {@class = "navbar-brand", @id = "softuni-memes"})
                <button type='button' class='btn btn-primary' id="button" onclick="location.href = '@Url.Action("index", "Image")'">View All Memes</button>
                <button type='button' class='btn btn-primary' id="button" onclick="location.href = '@Url.Action("TopFive", "Image")'">Top 5 Memes</button>
                <a href="/Home/About"  class='btn btn-primary' id="button">Team Info</a>
             </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</div>
<script>

    $(document)
        .ready(function() {
            setTimeout(function() {
                    document.getElementById("loader").style.opacity = 0;
                    document.getElementById("myDiv").style.opacity = 1;

                    setTimeout(function() {
                            document.getElementById("loader").style.display = 'none';
                        },
                        1000);
                },
                500);
        });
</script>
    <footer>
        <div id="footer">
            <ul class="nav navbar-nav">
                Softuni-Memes &copy; @DateTime.Now.Year - By Team ASKAL-J
            </ul>
        </div>
    </footer>
</body>
</html>