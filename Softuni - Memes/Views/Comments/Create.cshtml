@model Softuni___Memes.Models.Comment

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content container wrapper text-center">

        <h3 style="color: rgb(35,68,100)" id="createComment">Create comment</h3>


        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-offset-2 form-group">
            <p id="label" class="control-label col-md-2">@Html.Label("Body")</p>
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" }, rows = 5, cols = 30 })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display :none">
            <div class="col-md-6">
                @Html.EditorFor(model => model.ImageId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ImageId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" id="button" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary" id="button" onclick="window.location='@Url.Action("Details", "Image",new { id=Model.ImageId})'">Back</button>

        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
