@model Softuni___Memes.Models.Comment

@{
    ViewBag.Title = "Create";
}
<link href="/Content/Site.css" rel="stylesheet" type="text/css" />

<div class="wrapper">
    <h3 style="color: rgb(35,68,100)" id="createComment">Create comment</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal textarea-view">
           
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p id="label" class = "control-label col-md-2">@Html.Label("Body")</p>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" }, rows = 10, cols = 90 })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display :none">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ImageId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ImageId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" id="button" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
