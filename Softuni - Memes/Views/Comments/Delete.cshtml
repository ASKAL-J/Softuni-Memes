@model Softuni___Memes.Models.Comment

@{
    ViewBag.Title = "Delete";
}

<div class="content container">
    <div class="wrapper text-center">
        <h3 style="font-family: Lato; color: #224364">Are you sure you want to delete this comment?</h3>
        <hr style="border-color: #224364" />
        <br />
        <dl class="dl-horizontal" style="color: #224364">
            <dt>
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Body)
            </dd>
            <hr style="border-color: #224364" />
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
            <hr style="border-color: #224364" />

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <hr style="border-color: #224364" />
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input class="btn btn-primary" type="submit" id="button" value="Delete" class="btn btn-default" /> |
                <a href='@Url.Action("Details", "Image", new {id = Model.ImageId})'>Go back</a>
            </div>
        }
    </div>
</div>