@model Softuni___Memes.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2 style="font-family: Lato; color: #224364">@ViewBag.Title</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
        <hr />
        <div class="container">
            <div class="wrapper">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <p id="label" class="col-md-offset-2 col-md-8">@Html.Label("Old password:")</p>
                    <div class="col-md-offset-2 col-md-4">@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })</div>
                </div>
                <div class="form-group">
                    <p id="label" class="col-md-offset-2 col-md-8">@Html.Label("New Password:")</p>
                    <div class="col-md-offset-2 col-md-4">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <p id="label" class="col-md-offset-2 col-md-8">@Html.Label("Confirm password:")</p>
                    <div class="col-md-offset-2 col-md-4">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" id="button" value="Change password" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}